{
  "name": "gitsweep",
  "displayName": "GitSweep",
  "description": "Exclude files from git",
  "icon": "images/icons8-carpet-cleaning-256.png",
  "galleryBanner": {
    "color": "#C80000",
    "theme": "dark"
  },
  "version": "0.0.10",
  "publisher": "jellyedwards",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jellyedwards/gitsweep"
  },
  "engines": {
    "vscode": "^1.38.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:.git",
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "views": {
      "scm": [
        {
          "id": "gitSweep",
          "name": "GitSweep: Under the rug"
        }
      ]
    },
    "commands": [
      {
        "command": "gitSweep.sweep",
        "title": "GitSweep: Sweep under the rug",
        "icon": {
          "dark": "images/dark/icons8-carpet-cleaning-16.svg",
          "light": "images/light/icons8-carpet-cleaning-16.svg"
        }
      },
      {
        "command": "gitSweep.unsweep",
        "title": "GitSweep: Restore",
        "icon": {
          "dark": "images/dark/icons8-carpet-16.svg",
          "light": "images/light/icons8-carpet-16.svg"
        }
      },
      {
        "command": "gitSweep.refresh",
        "title": "GitSweep: Refresh",
        "icon": {
          "dark": "images/dark/refresh.svg",
          "light": "images/light/refresh.svg"
        }
      },
      {
        "command": "gitSweep.sweepFolder",
        "title": "Exclude folder"
      },
      {
        "command": "gitSweep.unsweepFolder",
        "title": "Restore folder"
      }
    ],
    "submenus": [
      {
        "id": "gitSweep.menu",
        "label": "GitSweep"
      }
    ],
    "menus": {
      "scm/resourceState/context": [
        {
          "command": "gitSweep.sweep",
          "group": "inline"
        }
      ],
      "view/item/context": [
        {
          "command": "gitSweep.unsweep",
          "when": "view == gitSweep",
          "group": "inline"
        }
      ],
      "view/title": [
        {
          "command": "gitSweep.refresh",
          "when": "view == gitSweep",
          "group": "navigation"
        }
      ],
      "explorer/context": [
        {
          "submenu": "gitSweep.menu",
          "group": "inline",
          "when": "explorerResourceIsFolder"
        }
      ],
      "gitSweep.menu": [
        {
          "command": "gitSweep.sweepFolder",
          "when": "explorerResourceIsFolder",
          "group": "inline"
        },
        {
          "command": "gitSweep.unsweepFolder",
          "when": "explorerResourceIsFolder",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js",
    "build": "vsce package"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/mocha": "^5.2.6",
    "@types/node": "^10.17.18",
    "@types/vscode": "^1.38.0",
    "glob": "^7.1.6",
    "mocha": "^9.2.2",
    "tslint": "5.20.1",
    "typescript": "^3.8.3",
    "vsce": "^2.7.0",
    "vscode-test": "^1.3.0"
  }
}
