{
  "name": "gitsweep",
  "displayName": "GitSweep",
  "description": "Exclude files from git",
  "icon": "images/icons8-carpet-cleaning-256.png",
  "galleryBanner": {
    "color": "#C80000",
    "theme": "dark"
  },
  "version": "0.0.1",
  "publisher": "jellyedwards",
  "repository": {
    "type" : "git",
    "url" : "https://github.com/jellyedwards/gitsweep"
  },
  "engines": {
    "vscode": "^1.38.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:.git",
    "onView:gitSweep"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "views": {
      "scm": [
        {
          "id": "gitSweep",
          "name": "GitSweep: Under the rug"
        }
      ]
    },
    "commands": [
      {
        "command": "gitSweep.sweep",
        "title": "Sweep under the rug",
        "icon": {
          "dark": "images/icons8-carpet-cleaning-16-filled.svg",
          "light": "images/icons8-carpet-cleaning-16.svg"
        }
      },
      {
        "command": "gitSweep.unsweep",
        "title": "Restore",
        "icon": {
          "dark": "images/icons8-carpet-16-filled.svg",
          "light": "images/icons8-carpet-16.svg"
        }
      },
      {
        "command": "gitSweep.refresh",
        "title": "Refresh"
      }
    ],
    "menus": {
      "scm/resourceState/context": [
        {
          "command": "gitSweep.sweep",
          "group": "inline"
        }
      ],
      "view/item/context": [
        {
          "command": "gitSweep.unsweep",
          "when": "view == gitSweep",
          "group": "inline"
        }
      ],
      "view/title": [
        {
          "command": "gitSweep.refresh",
          "when": "view == gitSweep",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/mocha": "^5.2.6",
    "@types/node": "^10.12.21",
    "@types/vscode": "^1.38.0",
    "glob": "^7.1.4",
    "mocha": "^6.1.4",
    "typescript": "^3.3.1",
    "tslint": "^5.12.1",
    "vscode-test": "^1.2.0"
  }
}
